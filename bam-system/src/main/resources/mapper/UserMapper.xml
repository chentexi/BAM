<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trent.system.mapper.login.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.trent.system.pojo.user.User">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="nickName" property="nickName"/>
        <result column="gender" property="gender"/>
        <result column="phone" property="phone"/>
        <result column="telephone" property="telephone"/>
        <result column="address" property="address"/>
        <result column="email" property="email"/>
        <result column="enabled" property="enabled"/>
        <result column="userName" property="userName"/>
        <result column="passWord" property="passWord"/>
        <result column="userFace" property="userFace"/>
        <result column="createBy" property="createBy"/>
        <result column="updateBy" property="updateBy"/>
        <result column="createTime" property="createTime"/>
        <result column="updateTime" property="updateTime"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        <if test="true">
            id, name, nickName, gender, phone, telephone, address, email, enabled, userName, passWord, userFace, createBy, updateBy, createTime, updateTime,remark
        </if>

    </sql>
    <sql id="Base_Column_User">
        <if test="true">
            id, name, nickName, gender, phone, email, enabled, userFace, createBy, createTime,remark
        </if>
    </sql>
    <insert id="addUser">
        insert into sys_user(<include refid="Base_Column_User"/>) values (#{id},#{name},#{nickName},#{gender},#{phone},#{email},#{enabled},null,#{createBy},#{createTime},#{remark})
    </insert>
    <delete id="delUserById">
        delete from sys_user where id in
        <foreach collection="array" item="id" index="index" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <select id="login" parameterType="string" resultMap="BaseResultMap">


    </select>

    <select id="selectUserByName" parameterType="string" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_user
        <where>
            username =#{userName}
            and enabled=1
        </where>
    </select>
    <select id="findUser" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_user
        <where>
            <if test="name!= null and name!=''">name like concat('%',#{name},'%')</if>
            <if test="startDateTime!=null and startDateTime!=''">createTime <![CDATA[&gt;= ]]> date_format(#{startDateTime},'%Y-%m-%d %H:%m:%s')</if>
            <if test="endDateTime!=null and endDateTime!=''">createTime <![CDATA[&lt;=]]> date_format(#{endDateTime},'%Y-%m-%d %H:%m:%s')</if>
        </where>
        order by id
    </select>

    <update id="upadteEnabled">
        update sys_user
        <set>
            <if test="enabled !=null ">enabled=#{enabled}</if>
        </set>
        where id=#{id}
    </update>

    <update id="updateUser">
        update sys_user
        <set>
            <if test=" name!=null and name!=''">name=#{name},</if>
            <if test=" nickName !=null and nickName !=''">nickName=#{nickName},</if>
            <if test=" phone!=null and phone!=''">phone=#{phone},</if>
            <if test=" gender!=null and gender!=''">gender=#{gender},</if>
            <if test=" email!=null and email!=''">email=#{email},</if>
            <if test=" updateBy!=null and updateBy!=''">updateBy=#{updateBy},</if>
            <if test=" updateTime!=null">updateTime=#{updateTime}</if>
        </set>
        where id=#{id}
    </update>
</mapper>
